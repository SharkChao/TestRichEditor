<?xml version="1.0" encoding="UTF-8"?>
<!-- 顶部带圆角 白色背景 灰色边框 无下边框 长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#fffcfbfb" />
            <corners android:topLeftRadius="0px" android:topRightRadius="0px"
                android:bottomRightRadius="5px" android:bottomLeftRadius="5px" />
            <stroke android:width="1px" android:color="#ffedecec" />
        </shape>
    </item>
    <item android:top="0px" android:left="1px" android:right="1px" android:bottom="1px">
        <shape>
            <solid android:color="#fffcfbfb" />
            <corners android:topLeftRadius="0px" android:topRightRadius="0px"
                android:bottomRightRadius="5px" android:bottomLeftRadius="5px" />
            <stroke android:width="1px" android:color="#fffcfbfb" />
        </shape>
    </item>
</layer-list>  